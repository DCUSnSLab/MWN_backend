# Database
DATABASE_URL=sqlite:///weather_notification.db

# Flask
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Weather API (OpenWeatherMap 등)
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Email notifications
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# SMS notifications
SMS_API_KEY=your-sms-api-key
SMS_API_URL=your-sms-api-url

# Notification settings
NOTIFICATION_CHECK_INTERVAL=3600

# 기상청 API
KMA_SERVICE_KEY=your-kma-service-key-from-apihub-kma-go-kr

# 날씨 스케줄러
WEATHER_CHECK_INTERVAL_MINUTES=30