# Database Configuration
DATABASE_URL=postgresql://myuser:mypassword@localhost:5432/weather_notification

# Security
SECRET_KEY=your-secret-key-here

# KMA (Korea Meteorological Administration) API
KMA_SERVICE_KEY=your-kma-service-key-here

# Weather Scheduler
WEATHER_CHECK_INTERVAL_MINUTES=30

# Firebase Configuration (choose one method)
# Method 1: File path
FIREBASE_SERVICE_ACCOUNT_KEY=/path/to/firebase-service-account.json

# Method 2: JSON string (recommended for production)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type": "service_account", "project_id": "your-project", ...}

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Server Configuration
# PORT: Flask 서버 포트 (기본값: 80)
PORT=80
# HOST: Flask 서버 호스트 (기본값: 0.0.0.0)
HOST=0.0.0.0